<!-- include header -->
<%- include('include/_header') %>
<!-- include header -->

<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>Tous les utilisateurs</a>
            </div>
        </div>

        <div class="form-title text-center">
            <h2 class="text-dark">Mettons à jour l'utilisateur</h2>
            <span class="text-light">Veuillez remplir le formulaire ci-dessous pour mettre à jour votre compte utilisateur</span>
        </div>
       
        
        <!-- form handling -->
        <form method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="entreprise" class="text-light">Entreprise</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="entreprise" value="<%= user.entreprise %>" placeholder="Cisco">
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                    <input type="text" name="email" value="<%= user.entreprise %>" placeholder="example@gmail.com">
                </div>

                <div class="form-group">
                    <label for="telephone" class="text-light">Telephone</label>
                    <input type="text" name="telephone" value="" placeholder="+21209999999">
                </div>

                <div class="form-group">
                    <label for="message" class="text-light">Message</label>
                    <input type="text" name="message" value=""  placeholder="hi!">
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
        
            </div>
            
        </form>

    </div>
</main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->